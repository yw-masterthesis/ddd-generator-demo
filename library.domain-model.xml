<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE domain SYSTEM "domain-model.dtd">
<domain name="Library">
    <context name="Catalogue">
        <aggregate name="Book">
            <identity name="ISBN"></identity>
            <value-object name="Title"></value-object>
            <value-object name="Author"></value-object>
        </aggregate>
        <aggregate name="BookInstance">
            <identity name="BookId"></identity>
        </aggregate>
        <enum name="BookType"></enum>
        <service name="CatalogueService"></service>
        <event name="BookInstanceAddedToCatalogue"></event>
    </context>
</domain>